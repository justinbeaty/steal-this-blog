---
import * as consts from "@/consts";

import { getTaxonomy } from "@/content/utils";

import { Image } from "astro:assets";
import Tag from "@/components/partials/Tag.astro";

import logo from "@/assets/logo.png";

const tags = (await getTaxonomy("blog", "tags")).slice(0, 8);
const today = new Date();
---

<footer class="footer">
  <div>
    <div class="flex flex-col justify-between gap-4 md:flex-row">
      <div class="space-y-6">
        <Image src={logo} alt={consts.SITE_TITLE} height="30" />
        <div>
          Logo font by <a href="https://www.misprintedtype.com/"
            >www.misprintedtype.com</a
          >
        </div>
      </div>

      <div class="hidden lg:block">
        <h4 class="font-semibold">Popular Tags</h4>
        <ul class="grid grid-cols-2 gap-x-4">
          {
            tags.map((tag) => (
              <li>
                <Tag text={tag.value} link />
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>

  <div class="footer__copyright">
    &copy; {today.getFullYear()}
    {consts.COMPANY_NAME}
  </div>
</footer>
